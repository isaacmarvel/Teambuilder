@page "/NewTeam"
@using PokeTeamBuilder.Core
@inject HttpClient Http     



<PageTitle>New Team</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">New Team</MudText>
<MudCard>
    <MudCardContent>
        <MudText>Image of pokemon selected goes here, otherwise placeholder</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary">Search pokemon</MudButton>
    </MudCardActions>
</MudCard>
<br>
@if (_pokemons == null)
{
    <p><em>Loading...</em></p>
}
else
{
    foreach (var pokemon in _pokemons.Results)
        {
            <MudPaper Width="300px">
                <MudList Clickable="true">
                <MudListItem Text="@pokemon.Name" Icon="@Icons.Material.Filled.Inbox" />
                </MudList>
            </MudPaper>
            <img src=@pokemon.Url>
    }
}

